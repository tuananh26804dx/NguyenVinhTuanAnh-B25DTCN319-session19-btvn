#include <stdio.h> 
#include <stdio.h>

int findMax(int *arr, int n) {
    int max = *arr;

    for (int i = 1; i < n; i++) {
        if (*(arr + i) > max) {
            max = *(arr + i);
        }
    }
    return max;
}

int main() {
    int n;
    printf("Nhap so luong phan tu cua mang: ");
    scanf("%d", &n);
    int arr[n];
    printf("Nhap cac phan tu cua mang:\n");
    for (int i = 0; i < n; i++) {
        printf("arr[%d]: ", i);
        scanf("%d", &arr[i]);
    }
    
    int maxElement = findMax(arr, n);

    printf("Phan tu lon nhat trong mang la: %d\n", maxElement);

    return 0;
}

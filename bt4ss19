#include <stdio.h> 
#include <stdio.h>

int countValue(int *arr, int n, int x) {
    int count = 0;
    for (int i = 0; i < n; i++) {
        if (arr[i] == x) {
            count++;
        }
    }
    return count;
}

int main() {
    int arr[] = {1, 2, 3, 4, 2, 5, 2, 8, 2};
    int n = sizeof(arr) / sizeof(arr[0]);
    int x;
    printf("Nhap gia tri can tim: ");
    scanf("%d", &x);
    int result = countValue(arr, n, x);
    printf("Gia tri %d xuat hien %d lan trong mang\n", x, result);

    return 0;
}

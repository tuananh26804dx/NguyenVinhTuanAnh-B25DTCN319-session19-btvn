#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int isPrime(int n) {
    if (n < 2) return 0;
    for (int i = 2; i <= sqrt(n); i++) {
        if (n % i == 0) return 0;
    }
    return 1;
}

int main() {
    int *arr = NULL;
    int n = 0;
    int choice;

    while (1) {
        printf("\n=========== MENU ===========\n");
        printf("1. Nhap vao so phan tu va tung phan tu\n");
        printf("2. In ra cac phan tu la so chan\n");
        printf("3. In ra cac phan tu la so nguyen to\n");
        printf("4. Dao nguoc mang\n");
        printf("5. Sap xep mang\n");
        printf("6. Nhap 1 phan tu va tim kiem trong mang\n");
        printf("7. Thoat\n");
        printf("Lua chon cua ban: ");
        scanf("%d", &choice);

        switch (choice) {

        case 1: {
            printf("Nhap so phan tu: ");
            scanf("%d", &n);

            arr = (int*) malloc(n * sizeof(int));
            if (arr == NULL) {
                printf("Khong the cap phat bo nho\n");
                return 1;
            }

            printf("Nhap tung phan tu:\n");
            for (int i = 0; i < n; i++) {
                printf("arr[%d] = ", i);
                scanf("%d", arr + i);
            }
            break;
        }

        case 2: {
            if (arr == NULL) { 
			printf("Mang chua duoc nhap\n"); 
			break; 
			}

            printf("Cac so chan trong mang: ");
            for (int i = 0; i < n; i++) {
                if (*(arr + i) % 2 == 0)
                    printf("%d ", *(arr + i));
            }
            printf("\n");
            break;
        }

        case 3: {
            if (arr == NULL) {
			 printf("Mang chua duoc nhap!\n");
			  break; 
			  }

            printf("Cac so nguyen to trong mang: ");
            for (int i = 0; i < n; i++) {
                if (isPrime(*(arr + i)))
                    printf("%d ", *(arr + i));
            }
            printf("\n");
            break;
        }

        case 4: { 
            if (arr == NULL) {
			 printf("Mang chua duoc nhap!\n");
			  break; 
			}

            for (int i = 0; i < n/2; i++) {
                int temp = *(arr + i);
                *(arr + i) = *(arr + n - 1 - i);
                *(arr + n - 1 - i) = temp;
            }
            printf("Mang da duoc dao nguoc!\n");
            break;
        }

        case 5: {
            if (arr == NULL) {
			printf("Mang chua duoc nhap!\n");
			break;
			}

            int subChoice;
            printf("\n--- MENU SAP XEP ---\n");
            printf("1. Tang dan\n");
            printf("2. Giam dan\n");
            printf("Lua chon: ");
            scanf("%d", &subChoice);

            if (subChoice == 1) {
                for (int i = 0; i < n - 1; i++) {
                    for (int j = i + 1; j < n; j++) {
                        if (*(arr + i) > *(arr + j)) {
                            int temp = *(arr + i);
                            *(arr + i) = *(arr + j);
                            *(arr + j) = temp;
                        }
                    }
                }
                printf("Mang da duoc sap xep tang dan!\n");

            } else if (subChoice == 2) {
                // S?p x?p gi?m d?n
                for (int i = 0; i < n - 1; i++) {
                    for (int j = i + 1; j < n; j++) {
                        if (*(arr + i) < *(arr + j)) {
                            int temp = *(arr + i);
                            *(arr + i) = *(arr + j);
                            *(arr + j) = temp;
                        }
                    }
                }
                printf("Mang da duoc sap xep giam dan!\n");

            } else {
                printf("Lua chon khong hop le!\n");
            }
            break;
        }

        case 6: {
            if (arr == NULL) {
			printf("Mang chua duoc nhap!\n");
			break;
			}

            int x;
            printf("Nhap phan tu can tim: ");
            scanf("%d", &x);

            int found = 0;
            for (int i = 0; i < n; i++) {
                if (*(arr + i) == x) {
                    printf("Tim thay %d o vi tri %d\n", x, i);
                    found = 1;
                    break;
                }
            }

            if (!found)
                printf("Khong tim thay %d trong mang!\n", x);
            break;
        }

        case 7:
            printf("Thoat chuong trinh...\n");
            free(arr);
            return 0;

        default:
            printf("Lua chon khong hop le!\n");
        }
    }

    return 0;
}
